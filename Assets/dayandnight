using UnityEngine;

public class DayNightCycle : MonoBehaviour
{
    // The main directional light (the sun)
    public Light sunLight;

    // Rotation speed of the sun (higher values mean faster cycles)
    public float daySpeed = 1f;

    // Optional: Change the skybox or other environmental lighting settings based on time of day
    public Color dayColor = new Color(1f, 1f, 1f); // White light for daytime
    public Color nightColor = new Color(0.1f, 0.1f, 0.3f); // Dark blue light for night

    // Start time (in hours) (0 = Midnight, 12 = Noon)
    private float timeOfDay = 0f;

    void Update()
    {
        // Update time of day
        timeOfDay += daySpeed * Time.deltaTime;

        // Loop back to 0 when a full day has passed
        if (timeOfDay >= 24f)
            timeOfDay = 0f;

        // Rotate the sun (directional light) around the x-axis to simulate a full day
        float sunRotation = (timeOfDay / 24f) * 360f; // 360 degrees for a full day cycle
        sunLight.transform.rotation = Quaternion.Euler(sunRotation - 90f, 170f, 0f); // Adjust rotation to match your scene

        // Change lighting color based on time of day (optional)
        if (timeOfDay >= 6f && timeOfDay < 18f) // Daytime (6 AM to 6 PM)
        {
            sunLight.color = dayColor;
        }
        else // Nighttime (6 PM to 6 AM)
        {
            sunLight.color = nightColor;
        }
    }
}
